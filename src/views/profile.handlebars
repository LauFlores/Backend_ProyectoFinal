

<h1>Mi Perfil</h1>

<div class="profile-card">
	<p>Bienvenido, {{user.first_name}} {{user.last_name}}!</p>
	<p>Rol: {{user.role}}</p>

	<form action="/api/sessions/logout" method="GET">
		<button class="btnMios" type="submit">Logout</button>
	</form>

	{{#if this.isAdmin}}
	<a class="btnMios" href="/realTimeProducts">Modificar Productos</a>
		<a class="btnMios" href="/users">Listado de usuarios</a>
	{{else}}
	{{#if this.isPremium}}
	<a class="btnMios" href="/realTimeProducts">Panel Premium</a>
	{{/if}}
	<a class="btnMios" href="/chat">Chat en vivo</a>
	<a class="btnMios" href="/products">Tienda</a>
	{{/if}}
</div>


{{!-- Con CSS --}}


<style>
	h1 {
		text-align: center;
		margin-top: 20px;
	}

	.profile-card {
		max-width: 400px;
		margin: 0 auto;
		padding: 20px;
		background-color: #f2f2f2;
		border-radius: 5px;
		text-align: center;
	}

	.profile-card p {
		margin-bottom: 10px;
	}

	.profile-card .btnMios {
		display: block;
		margin: 20px auto;
		padding: 10px 20px;
		background-color: #E0AB54;
		color: #fff;
		border: none;
		border-radius: 5px;
		font-size: 16px;
		cursor: pointer;
	}

	.profile-card .btnMios:hover {
		background-color: #E0AB54;
	}

	.profile-card a {
		display: block;
		margin-bottom: 10px;
		color: #E0AB54;
		text-decoration: none;
		font-weight: bold;
	}
</style>



